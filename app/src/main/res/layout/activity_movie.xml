<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zahangiralam.movie.MovieActivity">

    <EditText
        android:id="@+id/movieDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieNameText"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/movieUrlText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieDescriptionText"
        android:ems="10"
        android:hint="Copy-paste movie url here"
        android:inputType="textPersonName"
        android:longClickable="true"
        android:textIsSelectable="true" />

    <EditText
        android:id="@+id/movieGenreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieUrlText"
        android:ems="10"
        android:hint="Enter Genre"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/movieSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieRattingText"
        android:layout_marginTop="12dp"
        android:text="Save Movie" />

    <EditText
        android:id="@+id/movieRattingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieGenreText"
        android:ems="10"
        android:hint="Ratting"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/movieSaveButton"
        android:layout_alignStart="@+id/movieSaveButton"
        android:layout_below="@+id/movieSaveButton"
        android:layout_centerVertical="true" >
    </ImageView>

    <EditText
        android:id="@+id/movieNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Movie name"
        android:inputType="textPersonName" />

</RelativeLayout>
